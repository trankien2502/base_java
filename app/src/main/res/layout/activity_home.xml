<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_home"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivSetting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_setting_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="35dp"
        android:src="@drawable/img_app_name"
        android:layout_marginTop="66dp"
        app:layout_constraintDimensionRatio="289:185"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="374dp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/ivStart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="240:80"
            android:src="@drawable/img_home_start"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/start"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/bowlby_one_sc"
            app:layout_constraintTop_toTopOf="@id/ivStart"
            app:layout_constraintBottom_toBottomOf="@id/ivStart"
            app:layout_constraintEnd_toEndOf="@id/ivStart"
            app:layout_constraintStart_toStartOf="@id/ivStart"/>
        <ImageView
            android:id="@+id/ivChallenge"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/ivStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="240:80"
            android:src="@drawable/img_home_challenge"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/challenge"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/bowlby_one_sc"
            app:layout_constraintTop_toTopOf="@id/ivChallenge"
            app:layout_constraintBottom_toBottomOf="@id/ivChallenge"
            app:layout_constraintEnd_toEndOf="@id/ivChallenge"
            app:layout_constraintStart_toStartOf="@id/ivChallenge"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>